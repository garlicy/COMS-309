<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".GameDesign.GameDesignLeadInScreen">

    <TabWidget
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorDarkBlue" />

    <TabWidget
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/colorDarkBlue" />

    <Spinner
        android:id="@+id/SPINNER_LeadIn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="350dp"
        android:src="@drawable/settings" />

    <ImageView
        android:id="@+id/LEADIN_UsersImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/colorWhite" />

    <TextView
        android:id="@+id/LEADIN_UsersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:fontFamily="@font/pacifico"
        android:text="User name"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/GD_lead_img"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/newButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="100dp"
            android:text="Make New Draft">

        </Button>

        <Button
            android:id="@+id/loadButton"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="300dp"
            android:text="Load Most Recent Draft">

        </Button>

    </RelativeLayout>

</FrameLayout>